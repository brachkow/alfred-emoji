{
  "name": "alfred-emoji",
  "type": "module",
  "description": "Alfred workflow for searching and copying emojis",
  "main": "dist/emoji-search.js",
  "scripts": {
    "build": "node build.js",
    "dev": "pnpm build && cp -r dist/* ~/Library/Application\\ Support/Alfred/Alfred.alfredpreferences/workflows/user.workflow.*/",
    "package": "pnpm build && cd dist && zip -r ../alfred-emoji.alfredworkflow .",
    "start": "pnpm package && open alfred-emoji.alfredworkflow",
    "test:unit": "vitest",
    "test:lint": "eslint src",
    "test:types": "tsc --noEmit",
    "write:lint": "eslint src --fix"
  },
  "keywords": [
    "alfred",
    "emoji",
    "workflow",
    "search"
  ],
  "dependencies": {
    "emojibase": "^16.0.0",
    "emojibase-data": "^16.0.3",
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.5.2",
    "esbuild": "^0.25.10",
    "eslint": "^9.36.0",
    "eslint-config-fans": "^1.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
